" obsolete in nvim
set nocompatible
set history=10000       " welp
filetype plugin on      " allow plugins
filetype indent on      " auto indenting

set t_Co=256 " sloppy, lazy. fix pls

set runtimepath+=~/.config/vim

" Other
let $VARPATH=$HOME.'/.local/share/vim'
let &viewdir=$VARPATH.'/view'

" Set up plugins, non nvim go here, shared plugins go in the plugins.vim
call plug#begin('~/.config/vim/plugged')
runtime plugin-list.vim
call plug#end()

runtime general.vim
runtime file.vim
runtime map.vim
runtime plugin-configs.vim
runtime local.vim
