
set expandtab      " use spaces instead of tabs
set tabstop=4      " Spaces per tab
set shiftwidth=4   " Spaces per auto indent?
set smarttab       " Uses the correct tabbing. Use it.
set autoindent     " Auto indent
set smartindent    " Smart indet  - nvim on by default
set wrap           " Wrap lines
set linebreak      " Says break at tabs, etc
set nolist         " list disables linebreak
set textwidth=0    " These say don't put new
set wrapmargin=0   " linebreaks in text automatically

