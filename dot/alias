# all aliases across shells

LSOPTS="-h --color=auto"

# space removes from hist for zsh
alias ls=" ls $LSOPTS"
alias l="ls -l"
alias la="ls -Al"
alias lx="ls -lX"
alias lt="ls -lt"
alias lm="ls -l | more"

alias grep="grep --color=auto"

# Space removes from hist.
alias fg=" fg"

# alias rm="rm -i" # -i confirms EVERYTHING. Annoying, ubersafe.
# nocorrect fixes odd behaviors
alias cp="nocorrect cp -i"
alias mv="nocorrect mv -i"
alias mkdir="nocorrect mkdir"
alias md='mkdir -p'
alias rd='rmdir'

alias which="type -a"
alias .='popd'
alias d='dirs -v | head -10'
alias path='echo -e ${PATH//:/\\n}'
alias du='du -sh'

# Mmm. Vim.
alias crontab='VIM_CRONTAB=true crontab'
alias mvim='gvim'
alias nev='nvim'
